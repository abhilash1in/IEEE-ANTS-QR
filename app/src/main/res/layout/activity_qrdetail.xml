<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qrdetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.ieee.ants.QRDetailActivity">


    <TextView
        android:id="@+id/attendeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="Name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ticketType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/attendeeName"
        android:gravity="center_horizontal"
        android:text="Ticket Type"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/ticketNumber"
        android:layout_width="match_parent"
        android:layout_below="@id/ticketType"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Ticket Number"
        android:textSize="10sp" />


    <Button
        android:id="@+id/addKit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticketType"
        android:layout_marginTop="20dp"
        android:text="Issue Kit"/>

    <Button
        android:id="@+id/addLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addKit"
        android:text="Issue Lunch" />

    <Button
        android:id="@+id/addBanquet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addLunch"
        android:text="Issue Banquet"/>

    <Button
        android:id="@+id/viewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addBanquet"
        android:text="View Full Details"/>

    <TextView
        tools:text="Claim Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/claimResultView"
        android:textSize="20sp"
        android:layout_below="@+id/viewDetails"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/claimResultView"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            tools:text="detailsview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailTextView" />
    </ScrollView>

</RelativeLayout>
